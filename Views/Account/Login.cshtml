@model RegisterViewModel
@{
    ViewData["Title"] = "Login";
}
<div style="display:flex;justify-content:center;">
    <form method="post" asp-controller="Account" asp-action="Login">
        <div class = "form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" required class ="form-control"  />
        </div >

        <div class = "form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" required class ="form-control" maxlength = "10" />
        </div>
        <input type="submit" style = "margin-top:7px;" class = "btn btn-primary" value="Login" />

        <div class = "form-group">
            <div asp-validation-summary = "ModelOnly"></div>
        </div>

        <div class = "form-group" style = "margin-top:7px;">
            Don't' have account please register  <a asp-area="" asp-controller="Account" asp-action="Register">Register</a>
        </div>
    </form>
</div>
@section Scripts
{
    <script>
        sessionStorage.clear();
    </script>
}