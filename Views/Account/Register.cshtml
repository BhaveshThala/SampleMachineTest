@model RegisterViewModel
@{
    ViewData["Title"] = "Register";
}

<div style="display:flex;justify-content:center;">
    <form method="post" asp-controller="Account" asp-action="Register">

        <div class="form-group">
            <label asp-for="FullName">Full Name</label>
            <input asp-for="FullName" type="text" required class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Email"></label>
            <input asp-for="Email" required class="form-control" />
        </div>

        <div class="form-group">
            <label asp-for="Password"></label>
            <input asp-for="Password" id="pwd" required class="form-control"  maxlength="10" />
        </div>

        <div class="form-group">
            <label>Confirm Password</label>
            <input type="text" id="cnf" onkeyup="MatchPassword(this.value)" required class="form-control" maxlength="10" />
        </div>

        <div class="form-group">
            <label style="display:none;" id="errorLabel">Password and Confirm Password should be same.</label>
        </div>

        <input type="submit" style="margin-top:7px;" class="btn btn-primary" value="Register" />

        <div class="form-group">
            <div asp-validation-summary="ModelOnly"></div>
        </div>

        <div class="form-group" style="margin-top:7px;">
            Already have account please log in  <a asp-area="" asp-controller="Account" asp-action="Login">Login</a>
        </div>
    </form>
    @section Scripts
    {
    <script>
        function MatchPassword(val)
        {
            var errorLabel = document.getElementById("errorLabel");
            var password = document.getElementById("pwd").value;
            password !== val ? errorLabel.style.display = "block" : errorLabel.style.display = "none";
        }
    </script>
    }

</div>


